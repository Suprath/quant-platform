# --- INFRASTRUCTURE SECRETS ---

# Postgres Metadata DB
POSTGRES_USER=admin
POSTGRES_PASSWORD=password123
POSTGRES_DB=quant_platform

# MinIO Object Storage
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=password123

# Grafana Dashboard Access
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=password123

# QuestDB (Defaults)
QUESTDB_USER=admin
QUESTDB_PASSWORD=quest

# Redis
REDIS_HOST=redis_state
REDIS_PORT=6379

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka_bus:9092

# --- APP CONFIGURATION ---

# Upstox API Credentials (get from Upstox Developer Console)
UPSTOX_API_KEY=your_api_key_here
UPSTOX_API_SECRET=your_api_secret_here
UPSTOX_REDIRECT_URI=http://localhost:8501
UPSTOX_ACCESS_TOKEN=your_access_token_here

# Runtime Mode
# usage: 'true' for backtesting, 'false' for live paper-trading
BACKTEST_MODE=false
LOG_LEVEL=INFO

# Strategy Configuration
STRATEGY_NAME=momentum_pro.MomentumPro
STRATEGY_PARAMS={"profit_target": 0.003, "trailing_stop": 0.002, "cooldown": 30}
